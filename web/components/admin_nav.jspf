<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<nav class="admin-nav">
    <div class="container">
        <div class="nav-header" style="display: flex; align-items: center; justify-content: space-between;">
            <button class="nav-toggle" aria-label="Mở menu" onclick="toggleAdminNav()" style="background: none; border: none; font-size: 2rem; cursor: pointer; display: none;">
                &#9776;
            </button>
        </div>
        <ul class="nav-list" style="display: flex; flex-wrap: wrap; gap: 10px; list-style: none; padding: 0; margin: 0;">
            <li><a href="dashboard.jsp" class="btn">📊 Dashboard</a></li>
            <li><a href="register.jsp" class="btn">📝 Quản lý Đơn đăng ký</a></li>
            <li><a href="teacher.jsp" class="btn">👨‍🏫 Quản lý Giáo viên</a></li>
            <li><a href="class.jsp" class="btn">🏃‍♀️ Quản lý Lớp học</a></li>
            <li style="margin-left:auto;"><a href="../login.jsp" class="btn btn-danger">🚪 Đăng xuất</a></li>
        </ul>
    </div>
</nav>
<script>
function toggleAdminNav() {
    var navList = document.querySelector('.admin-nav .nav-list');
    navList.style.display = (navList.style.display === 'flex' || navList.style.display === '') ? 'block' : 'flex';
}
function handleAdminNavResize() {
    var navToggle = document.querySelector('.admin-nav .nav-toggle');
    var navList = document.querySelector('.admin-nav .nav-list');
    if(window.innerWidth <= 768) {
        navToggle.style.display = 'block';
        navList.style.display = 'none';
    } else {
        navToggle.style.display = 'none';
        navList.style.display = 'flex';
    }
}
window.addEventListener('resize', handleAdminNavResize);
document.addEventListener('DOMContentLoaded', handleAdminNavResize);
</script>
<style>
.admin-nav {
    width: 100%;
    position: relative;
    background: linear-gradient(90deg, #4f46e5 0%, #667eea 50%, #5a67d8 100%);
    box-shadow: 0 6px 24px rgba(102,126,234,0.18);
    min-height: 80px;
    display: flex;
    align-items: center;
    z-index: 1000;
}
.admin-nav .container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
    display: flex;
    align-items: center;
    min-height: 80px;
    background: transparent;
}
.admin-nav .nav-list {
    transition: all 0.3s;
    width: 100%;
    justify-content: center;
}
.admin-nav .nav-list li a.btn {
    background: #fff;
    color: #4f46e5;
    border-radius: 10px;
    padding: 12px 28px;
    font-size: 1.08rem;
    font-weight: 600;
    box-shadow: 0 2px 12px rgba(102,126,234,0.10);
    margin-right: 8px;
    transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    text-decoration: none;
    display: inline-block;
}
.admin-nav .nav-list li a.btn:hover {
    background: #4f46e5;
    color: #fff;
    box-shadow: 0 4px 16px rgba(102,126,234,0.18);
}
.admin-nav .nav-list li a.btn-danger {
    background: #e53e3e;
    color: #fff;
}
.admin-nav .nav-list li a.btn-danger:hover {
    background: #c53030;
}
@media (max-width: 900px) {
    .admin-nav {
        min-height: 64px;
    }
    .admin-nav .container {
        padding: 0 8px;
        min-height: 64px;
    }
    .admin-nav .nav-list {
        flex-direction: column;
        gap: 0;
        background: linear-gradient(90deg, #4f46e5 0%, #667eea 50%, #5a67d8 100%);
        position: absolute;
        top: 55px;
        left: 8px;
        right: 8px;
        z-index: 100;
        padding: 10px 0;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(102,126,234,0.18);
    }
    .admin-nav .nav-list li {
        margin: 10px 0;
        width: 100%;
        text-align: left;
    }
    .admin-nav .nav-list li a.btn {
        width: 100%;
        margin-right: 0;
        margin-bottom: 8px;
        font-size: 1rem;
        padding: 10px 18px;
    }
    .admin-nav .nav-toggle {
        display: block !important;
    }
}
</style>
